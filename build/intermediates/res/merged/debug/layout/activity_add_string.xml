<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_string"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.group4.joseph.timetablenotifier.AddStringActivity"
    android:background="@drawable/image1">

    <Button
        android:text="Submit Modules"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="addString"
        android:id="@+id/submitModulesButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/buttoncorners"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual" />

    <EditText android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edit_message"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />

    <EditText android:id="@+id/edit_message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter a Module"
        android:layout_below="@+id/edit_message"
        android:layout_alignParentStart="true" />

    <EditText android:id="@+id/edit_message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter a Module"
        android:layout_below="@+id/edit_message1"
        android:layout_alignParentStart="true" />

    <EditText android:id="@+id/edit_message3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter a Module"
        android:layout_below="@+id/edit_message2"
        android:layout_alignParentStart="true" />

    <EditText android:id="@+id/edit_message4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter a Module"
        android:layout_below="@+id/edit_message3"
        android:layout_alignParentStart="true" />

    <EditText android:id="@+id/edit_message6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter a Module"
        android:layout_below="@+id/edit_message5"
        android:layout_alignParentStart="true" />

    <EditText android:id="@+id/edit_message5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter a Module"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/edit_message3"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Main Menu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="mainMenuReturn"
        android:id="@+id/menuButton"
        android:background="@drawable/buttoncorners"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual" />

    <TextView
        android:text="Enter Modules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textSize="40sp"
        android:fontFamily="cursive"
        android:textColor="#000000"
        android:textStyle="normal|bold" />

</RelativeLayout>
