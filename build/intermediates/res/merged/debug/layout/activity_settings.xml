<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/image1"
    tools:context="com.group4.joseph.timetablenotifier.Settings">

    <Button
        android:background="@drawable/buttoncorners"
        android:layout_height="wrap_content"
        android:layout_width="175dp"
        android:id="@+id/inputModulesButton"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual"
        android:elevation="0dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="Input Modules"/>

    <Button
        android:background="@drawable/buttoncorners"
        android:layout_height="wrap_content"
        android:layout_width="175dp"
        android:id="@+id/inputLocationsButton"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:text="Input Locations"
        android:layout_below="@+id/inputModulesButton"/>


    <Button
        android:background="@drawable/buttoncorners"
        android:layout_height="wrap_content"
        android:layout_width="175dp"
        android:id="@+id/backgroundButton"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:text="Change Background"
        android:layout_below="@+id/inputLocationsButton"/>

    <Button
        android:background="@drawable/buttoncorners"
        android:layout_height="wrap_content"
        android:layout_width="175dp"
        android:id="@+id/weatherButton"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:text="Weather"
        android:layout_below="@+id/backgroundButton"/>

    <TextView
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleMainText"
        android:textSize="50sp"
        android:fontFamily="cursive"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Main Menu"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/menuButton"
        android:background="@drawable/buttoncorners"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/weatherButton" />

    <Button
        android:text="Log Out"
        android:layout_height="wrap_content"
        android:id="@+id/logOutStudentButton"
        android:background="@drawable/buttoncorners"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual"
        android:layout_marginTop="16dp"
        android:layout_width="175dp"
        android:layout_below="@+id/weatherButton"
        android:layout_alignStart="@+id/weatherButton" />


</RelativeLayout>
