<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_lec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/image1"
    tools:context="com.group4.joseph.timetablenotifier.MainLecActivity">

    <TextView
        android:text="Lecturer Homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleMainText"
        android:textSize="42sp"
        android:fontFamily="cursive"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_below="@+id/settingsButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Send Notification"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/notificationButton"
        android:background="@drawable/buttoncorners"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual"
        android:layout_below="@+id/titleMainText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <Button
        android:text="Log Out"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/logOutButton"
        android:background="@drawable/buttoncorners"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual"
        android:layout_marginBottom="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/weatherLecButton" />

    <Button
        android:text="View Timetable"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/timetableButton"
        android:background="@drawable/buttoncorners"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/notificationButton"
        android:layout_alignStart="@+id/notificationButton" />

    <Button
        android:text="Add Modules"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/addModules"
        android:background="@drawable/buttoncorners"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/timetableButton"
        android:layout_alignStart="@+id/timetableButton" />

    <Button
        android:text="Weather"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/weatherLecButton"
        android:background="@drawable/buttoncorners"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/addModules"
        android:layout_alignStart="@+id/addModules" />

</RelativeLayout>
