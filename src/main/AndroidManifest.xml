<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.group4.joseph.timetablenotifier">
    -
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />



        <activity android:name=".FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Monday" />
        <activity android:name=".Tuesday" />
        <activity android:name=".Wednesday" />
        <activity android:name=".Thursday" />
        <activity android:name=".Friday" />

        <receiver android:name=".NotificationReceiver" />

        <activity android:name=".AddStringActivity" />
        <activity android:name=".AddLocationString" />
        <activity android:name=".Settings" />
        <activity android:name=".MainLecActivity" />
        <activity android:name=".LecNotifications" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Cancellations" />
        <activity android:name=".Weather"></activity>
    </application>

</manifest>