<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/image1"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.group4.joseph.timetablenotifier.MainActivity">


    <TextView
        android:text="Timetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleMainText"
        android:textSize="50dp"
        android:fontFamily="cursive"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Input Modules &amp; Locations"
        android:layout_height="wrap_content"
        android:id="@+id/logOutStudentButton"
        android:background="@drawable/buttoncorners"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="180dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:id="@+id/listView"
        android:layout_below="@+id/titleMainText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />

    <Button
        android:text="Cancellations"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/cancellationsButton"
        android:background="@drawable/buttoncorners"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/logOutStudentButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/settings_image"
        android:id="@+id/settingsButton"
        android:layout_above="@+id/listView"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settingsButton"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_dark"
        android:id="@+id/current_temperature_field"
        android:textSize="25sp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="35sp"
        android:id="@+id/weather_icon"
        android:layout_alignTop="@+id/current_temperature_field"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

</RelativeLayout>