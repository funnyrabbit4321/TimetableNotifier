<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lec_notifications"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/image1"
    tools:context="com.group4.joseph.timetablenotifier.LecNotifications">

    <TextView
        android:text="Lecture Cancellation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lectureTitle"
        android:textSize="50dp"
        android:fontFamily="cursive"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <Spinner
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Module"
        android:layout_width="120dp"
        android:hint="Module"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="At:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/textView4"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:fontFamily="cursive"
        android:layout_below="@+id/Module"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="On:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:fontFamily="cursive"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Time"
        android:layout_width="120dp"
        android:hint="Time"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/Module"
        android:layout_alignStart="@+id/Module"
        android:layout_marginTop="21dp" />

    <Spinner
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Day"
        android:layout_width="120dp"
        android:hint="Day"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/Time"
        android:layout_alignStart="@+id/Time" />

    <TextView
        android:text="Cancel:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:fontFamily="cursive"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/lectureTitle"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Send"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/sendToFirebase"
        android:background="@drawable/buttoncorners"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/Day"
        android:layout_alignStart="@+id/Day" />

</RelativeLayout>
